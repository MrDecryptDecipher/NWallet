{
  "manifest_version": 3,
  "name": "Nija Wallet",
  "version": "1.0.0",
  "description": "Secure cryptocurrency wallet for Ethereum and EVM-compatible chains",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "favicon.ico",
      "48": "favicon.ico",
      "128": "favicon.ico"
    }
  },
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
    "128": "favicon.ico"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.alchemyapi.io/*",
    "https://*.infura.io/*",
    "https://api.coingecko.com/*",
    "https://api.coinbase.com/*",
    "https://api.binance.com/*",
    "https://*.coinlayer.com/*",
    "https://corsproxy.io/*",
    "https://cors-anywhere.herokuapp.com/*",
    "https://api.allorigins.win/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "images/*",
        "fonts/*",
        "scripts/*",
        "index.html",
        "*.js",
        "*.css",
        "*.woff",
        "*.woff2",
        "*.ttf"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.alchemyapi.io https://*.infura.io https://api.coingecko.com https://api.coinbase.com https://api.binance.com https://*.coinlayer.com https://corsproxy.io https://cors-anywhere.herokuapp.com https://api.allorigins.win"
  }
} 